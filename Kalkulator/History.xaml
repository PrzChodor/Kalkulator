<Window x:Class="Kalkulator.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d" GotMouseCapture="Window_GotMouseCapture" WindowStyle="ToolWindow" 
        Title="Calculator - History" Height="450" Width="350" ResizeMode="NoResize">
    <Grid>
        <ListBox Name="historyListBox" HorizontalContentAlignment="Left" Background="#0A0A0A" BorderThickness="0"
                 FontSize="24" Padding="5"  SelectionChanged="historyListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Loaded="Grid_Loaded" >
                        <TextBlock Text="{Binding Text, Mode=TwoWay}" TextWrapping="Wrap" Foreground="#E7E7E7"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
